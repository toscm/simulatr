#' @export
#' @name normal_data
#' @title Create normal data
#' Gaussian or normal distribution
#' @param n The number of samples
#' @param p The number of features (e.g. genes)
#' @return A dataframe of size n*p
#' @examples
#' \dontrun{
#' normal_data(10, 10)
#' }
#'
normal_data <- function(n, p) {
    mat <- matrix(, p, n)
    var <- vector()
    for (i in 1:p) {
        var <- rnorm(n)
        mat[i, 1:n] <- var
        df <- data.frame(mat)
    }
    return(df)
}
